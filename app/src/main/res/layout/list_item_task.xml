<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_day"
            android:textSize="18sp"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageButton
            android:id="@+id/image_view_task_status"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/task_status_button"
            android:layout_height="wrap_content"/>
        <LinearLayout
        android:layout_width="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
        android:id="@+id/text_view_task_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/text_view_task_time"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_weight="0.5"
        android:id="@+id/image_view_tag_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_task_id"
            android:visibility="invisible"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_action_action_highlight_remove"
        android:id="@+id/image_button_delete_task"/>
    </LinearLayout>
</LinearLayout>