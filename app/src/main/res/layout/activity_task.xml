<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:elevation="5dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:padding="16dp"
        android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:id="@+id/editText_task_title"
                android:hint="@string/task_title"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:inputType="date"
                    android:onClick="getDateAndTime"
                    android:clickable="true"
                    android:hint="@string/task_date"
                    android:ems="8"
                    android:id="@+id/editText_task_date" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/at_symbol"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/task_time"
                    android:onClick="getDateAndTime"
                    android:clickable="true"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:inputType="date"
                    android:ems="8"
                    android:id="@+id/editText_task_time" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:inputType="textMultiLine"
                android:id="@+id/editText_task_desc"
                android:hint="@string/task_desc"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_task_remind_me"
                    android:text="@string/task_remind_me"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_weight="1.5"
                    />
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_remind_me"
                    />
            </LinearLayout>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tag_names"
                android:prompt="@string/assign_task_to"
                android:spinnerMode="dialog"
                android:id="@+id/spinner_add_tag"
                android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_user_name"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="right"
                android:id="@+id/text_view_user_phone_number"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:layout_weight=".7"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

<android.support.design.widget.FloatingActionButton
    android:id="@+id/fab_new_task"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clickable="true"
    android:onClick="saveButtonClicked"
    android:src="@drawable/ic_action_content_send"
    app:layout_anchor="@id/actionBar"
    app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>
